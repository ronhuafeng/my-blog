// 修改成你期望的宽度
$content-desktop = 700px

// 当视窗超过 1600px 后的宽度
$content-desktop-large = 900px

// 标题，修改成你期望的字体族
$font-family-headings = Consolas, Menlo, monospace, "Microsoft YaHei"

// 修改成你期望的字体族
$font-family-base = Consolas, Menlo, monospace, "Microsoft YaHei", Verdana, sans-serif

// 代码字体
$code-font-family = Consolas, Menlo, monospace, "Input Mono", "PT Mono"

// 正文字体的大小
$font-size-base = 16px

// 代码字体的大小
$code-font-size = 14px
